<h2>Change Password</h2>

<p>You can change your own password here.</p>

<form method="POST" action="/user/change_pw" class="form-horizontal">
  <div class="form-group">
    <label class="col-md-4 control-label" for="old_password">Old password: </label>
    <div class="col-md-6">
      <input class="form-control" type="password" name="old_password" placeholder="Old password">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="password">New password: </label>
    <div class="col-md-6">
      <input class="form-control" type="password" name="password" placeholder="New password">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="password_confirm">Confirm new password: </label>
    <div class="col-md-6">
      <input class="form-control" type="password" name="password_confirm" placeholder="New password again">
    </div>
  </div>

  <input type="submit" class="btn btn-primary" value="Save">
</form>

